@model List<ABUserAuth>
<script type="text/javascript">
    $(document).ready(function () {
        // build table layout
        if( $.fn.dataTable ) {
            $("#ListTable").dataTable({
                sPaginationType: "full_numbers",
                "aLengthMenu": [30, 50, 100]
            });
        }
    });

</script>
<table class="mws-table" id="ListTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th width="100px">
                Actions
            </th>
        </tr>
    </thead>
    @if (Model.Count() > 0)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span>@item.FullName </span>
                    </td>
                    <td>
                        <span>@item.UserName </span>
                    </td>
                    <td>
                        <span>@item.Email </span>
                    </td>
                    <td class="no_padding">
                    <span class="btn-group">
                        <a  href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-small delete" title="Delete @item.UserName" >
                                    <i class="icon-trash"></i></a>
                    </span>
                        
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
