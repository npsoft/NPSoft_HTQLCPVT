@model Order

@{
    Layout = null;
    var ticket = (Order_UploadFilesTicket)ViewData["Ticket"];
}

<div class="dialog mws-panel-body" id="Dialog_UploadFilesTicket" style="display: none;" title="">
    <form id="frmUploadFilesTicket" name="frmUploadFilesTicket" action="#" method="post" enctype="multipart/form-data">
	    <div class="mws-form-inline">
            <div class="mws-form-row">
                <label class="mws-form-label"></label>
                <div class="mws-form-item">
                    <span>Status:&nbsp;<span style="font-weight:bold;">@(((Enum_UploadFilesTicketStatus)ticket.Status).DisplayName())</span></span>
                    @if (ticket.Status == (int)Enum_UploadFilesTicketStatus.DecryptedSuccess)
                    {
                        <text>&nbsp;</text><button name="Approve" class="btn btn-primary">Approve</button>
                        <br/><span>Uploaded temporary file name:&nbsp</span>
                        <a href="http://ucdn.photobookmart.com/@string.Format("{0}_{1}{2}", Model.Id, ticket.Id, ".zip")" style="color: #000;" title="Download this file" target="_blank">
                            <i class="icon-attachment"></i></a> <span style="font-weight:bold;">@string.Format("{0}_{1}{2}", Model.Id, ticket.Id, ".zip")</span>
                    }
                </div>
            </div>
            <div class="mws-form-row">
                <label class="mws-form-label"></label>
                <div class="mws-form-item">
                    <span style="font-weight:bold;">Cancel this File Upload Request</span>
                    <br/><br/><span>Reason&nbsp;</span>
                    <input type="text" name="Reason" style="width:350px;" />
                    &nbsp;<button name="Cancel" class="btn btn-danger">Remove</button>
                </div>
            </div>
            <input type="hidden" name="OrderId" value="@Model.Id" />
	    </div>
    </form>
</div>