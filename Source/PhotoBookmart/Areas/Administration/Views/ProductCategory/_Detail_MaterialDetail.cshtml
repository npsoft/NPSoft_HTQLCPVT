@model ProductCategoryMaterial
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span><i class="icon-table"></i>Manage Images - Material @Model.Name - Style @Model.ProductCategoryName</span>
    </div>
    <div class="mws-panel-toolbar">
        <div class="btn-toolbar">
            <div class="btn-group">
                <a href="@Url.Action("Add_MaterialDetail", "ProductCategory", new { materialId = Model.Id })" class="btn">
                    <i class="icol-add"></i>Add
                </a>
            </div>
        </div>
    </div>
    <div class="mws-panel-body no-padding WDTB_Group list-product-category-material-detail">
        @Html.Action("List_MaterialDetail", "ProductCategory", new { materialId = Model.Id })
    </div>
</div>