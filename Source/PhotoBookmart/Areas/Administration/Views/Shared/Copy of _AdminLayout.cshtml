                </div>
                <ul class="control">
                    <li><span class="icon-comment"></span><a target="_blank" href="@Url.Action("Index", "Home", new { area = "" })">Frontend</a></li>
                    <li><span class="icon-cog"></span><a href="@Url.Action("Index", "Setting")">Settings</a></li>
                    <li><span class="icon-share-alt"></span><a href="@Url.Action("LogOff", "Management")">
                        Logout</a></li>
                </ul>
            </div>
            <ul class="navigation">
                <li><a href="@Url.Action("Index", "Management")"><span class="isw-grid"></span><span
                    class="text">Dashboard</span> </a></li>
                <li class="openable"><a href="#"><span class="isw-list"></span><span class="text">Membership</span>
                </a>
                    <ul>
                        @*<li><a href="@Url.Action("Index", "RolesManagement")"><span class="icon-th"></span><span
                            class="text">@CMSBE.Admin_Menu_MembershipManagement_RolesManagement</span> </a>
                        </li>*@
                        <li><a href="@Url.Action("Index", "UserManagement")"><span class="icon-th-large"></span>
                            <span class="text">Users Management</span>
                        </a></li>
                    </ul>
                </li>
                <li><a href="@Url.Action("Index", "Advertiser")">
                    <span class="isw-bookmark"></span>
                    <span class="text">Advertisers Company</span> </a>
                </li>
                <li class="openable"><a href="#"><span class="isw-list"></span><span class="text">Advertisements</span>
                </a>
                    <ul>
                        <li><a href="@Url.Action("Index", "AdzCategory")"><span class="icon-th"></span><span
                            class="text">Category Management</span> </a>
                        </li>
                        <li><a href="@Url.Action("Index", "Adv")"><span class="icon-th-large"></span>
                            <span class="text">Advertisements</span>
                        </a></li>
                        <li><a href="@Url.Action("Index", "Rules")"><span class="icon-th-large"></span>
                            <span class="text">Rules Management</span>
                        </a></li>
                    </ul>
                </li>
                <li class="openable"><a href="#"><span class="isw-list"></span><span class="text">Payment</span>
                </a>
                    <ul>
                        <li><a href="@Url.Action("Index", "Payment")"><span class="icon-th"></span><span
                            class="text">Payment Queue</span> </a>
                        </li>
                        <li><a href="@Url.Action("Category", "Payment")"><span class="icon-th"></span><span
                            class="text">Transaction Log</span> </a>
                        </li>
                    </ul>
                </li>
                <li class="openable"><a href="#"><span class="isw-list"></span><span class="text">Reports</span>
                </a>
                    <ul>
                        <li><a href="@Url.Action("AdzActivity", "Report")"><span class="icon-th-large"></span>
                            <span class="text">Adz Activities</span>
                        </a></li>
                        <li><a href="@Url.Action("CompanyActivity", "Report")"><span class="icon-th-large"></span>
                            <span class="text">Company Activities</span>
                        </a></li>
                        <li><a href="@Url.Action("SyncAdz", "Report")"><span class="icon-th"></span><span
