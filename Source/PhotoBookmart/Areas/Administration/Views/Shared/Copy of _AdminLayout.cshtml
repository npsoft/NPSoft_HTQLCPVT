                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Management")">@CMSBE.Admin_Breadcumb_Sitetitle</a>
                        <span class="divider">></span> <a href="@Url.Action("Index", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())">
                            @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()</a>
                        <span class="divider">></span> </li>
                    <li class="active">@ViewBag.Title</li>
                </ul>
                <!-- Language and search -->
                @Html.Partial("_LanguageAndSearchTopRight")
                <!-- End language and search -->
            </div>
            <div class="workplace">
                @RenderBody()
            </div>
        </div>
        <div class="loading-box" style="position: fixed; top: 30%; left: 50%; background: #333;
            padding: 20px; border-radius: 5px; opacity: 0.8; display: none">
            <img src="/Content/img/loaders/c_loader_bw.gif" title="c_loader_bw.gif">
        </div>
    </div>
</body>
</html>
