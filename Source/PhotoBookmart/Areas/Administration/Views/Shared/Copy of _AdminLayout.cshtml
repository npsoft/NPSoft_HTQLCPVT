                </span><span class="text">Settings</span> </a>
                    <ul>
                        <li><a href="@Url.Action("Index", "Language")"><span class="icon-globe"></span><span
                            class="text">Device Screen Size</span></a>
                         </li>
                        <li class="active"><a href="@Url.Action("Index", "Setting")"><span class="icon-wrench">
                        </span><span class="text">System setting</span> </a>
                        </li>
                        <li><a href="@Url.Action("EmailSetting", "Setting")"><span class="icon-envelope"></span>
                            <span class="text">Email Setting</span></a></li>
                        <li><a href="@Url.Action("Index", "Language")"><span class="icon-globe"></span><span
                            class="text">Language</span></a></li>
