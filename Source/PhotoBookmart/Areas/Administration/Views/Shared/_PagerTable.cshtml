@{
    int distance = (int)ViewData["Distance"];
    int currPage = (int)ViewData["CurrPage"];
    int pageSize = (int)ViewData["PageSize"];
    int totalItem = (int)ViewData["TotalItem"];
    int totalPage = (int)ViewData["TotalPage"];
    int staItem = totalItem != 0 ? (currPage - 1) * pageSize + 1 : 0;
    int endItem = totalItem != 0 && currPage != totalPage ? currPage * pageSize : totalItem;
    int seqLeft = currPage > distance ? currPage - distance : 1;
    int seqRight = totalPage - currPage > distance ? currPage + distance : totalPage;
}
<div class="dataTables_wrapper">
    <div class="dataTables_info" id="ListTable_info">Showing @staItem to @endItem of @totalItem entries</div>
    <div class="dataTables_paginate paging_full_numbers" id="ListTable_paginate">
        @if (currPage != 1)
        {
            <a tabindex="0" class="first paginate_button" id="ListTable_first" onclick="javascript:Paging(1);">First</a>
            <a tabindex="0" class="previous paginate_button" id="ListTable_previous" onclick="javascript:Paging(@(currPage - 1));">Previous</a>
        }
        else
        {
            <a tabindex="0" class="first paginate_button paginate_button_disabled" id="ListTable_first">First</a>
            <a tabindex="0" class="previous paginate_button paginate_button_disabled" id="ListTable_previous">Previous</a>
        }
        <span>
            @for (int i = seqLeft; i < currPage; i++)
            {
                <a tabindex="0" class="paginate_button" onclick="javascript:Paging(@i);">@i</a>
            }
            <a tabindex="0" class="paginate_active" onclick="javascript:Paging(@currPage);">@currPage</a>
            @for (int i = currPage + 1; i < seqRight + 1; i++)
            {
                <a tabindex="0" class="paginate_button" onclick="javascript:Paging(@i);">@i</a>
            }
        </span>
        @if (currPage != totalPage && totalPage != 0)
        {
            <a tabindex="0" class="next paginate_button" id="ListTable_next" onclick="javascript:Paging(@(currPage + 1));">Next</a>
            <a tabindex="0" class="last paginate_button" id="ListTable_last" onclick="javascript:Paging(@totalPage);">Last</a>
        }
        else
        {
            <a tabindex="0" class="next paginate_button paginate_button_disabled" id="ListTable_next">Next</a>
            <a tabindex="0" class="last paginate_button paginate_button_disabled" id="ListTable_last">Last</a>
        }
    </div>
</div>