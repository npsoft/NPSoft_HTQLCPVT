@using CMS.Data
@using CMSApplication.Areas.Administration.Models
@model IEnumerable<TopicModel>
@if (Model.Count() > 0)
{
    <ul class="listtopic">
        @foreach (var item in Model)
        {
            <li>
                <input type="radio" value="@Url.Action("Detail", "Topic", new { area = "", systemname = item.SystemName, culture = Session.GetCultureID() }, null).Substring(1)" name="listtopic" id="listtopic"/>
                @Html.ActionLink(item.Title+" ("+ item.SystemName+")", "Detail", "Topic", new { area = "", systemname = item.SystemName , culture= Session.GetCultureID() }, null)
            </li>
        }
    </ul>
}