@model Site_Form
@{
        ViewBag.Title = "Manage Form Controls for "+ Model.Name +" - "+ Model.SiteName;
}
<div class="head">
    <h3>
        @ViewBag.Title</h3>
    <div>
         <a type="button" class="btn" href="@Url.Action("Index", new { site_id = Model.SiteId })" >
                <i class="icol-arrow-left"></i>&nbsp;@Model.SiteName Forms</a>
        <a type="button" class="btn btn-primary" href="@Url.Action("FormControlAdd", new {id = Model.Id})">New Control</a>
    </div>
</div>
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span><i class="icon-table"></i>@ViewBag.Title</span>
    </div>
    <div class="mws-panel-body no-padding listuser">
        @Html.Action("FormControlList", new { id = Model.Id })
    </div>
</div>
