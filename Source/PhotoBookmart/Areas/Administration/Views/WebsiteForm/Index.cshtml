@model Website
@{
    if (Model.Id == 0)
    {
        ViewBag.Title = "Manage Forms for All Website";
    }
    else
    {
        ViewBag.Title = "Manage Forms for " + Model.Name;
    }
}
<div class="head">
    <h3>
        @ViewBag.Title</h3>
    <div>
        <a type="button" class="btn btn-primary" href="@Url.Action("Add", new {site_id = Model.Id})">New Form</a>
    </div>
</div>
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span><i class="icon-table"></i>@ViewBag.Title</span>
    </div>
    <div class="mws-panel-body no-padding listuser">
        @Html.Action("List", new { site_id = Model.Id })
    </div>
</div>
